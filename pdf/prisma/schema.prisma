generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Basic auth user (optional now; can be extended later)
model User {
  id        String   @id @default(cuid()) @db.VarChar(191)
  email     String   @unique @db.VarChar(191)
  name      String?  @db.VarChar(191)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resumes   Resume[]
}

// Resume builder data. We store structured JSON to evolve template fields easily.
model Resume {
  id           String   @id @default(cuid()) @db.VarChar(191)
  title        String   @db.VarChar(191)
  template     String   @db.VarChar(64) // e.g., "rirekisho-v1"
  data         Json
  // Page settings to ensure 2-page A4 on export
  pageFormat   String   @default("A4") @db.VarChar(16)
  pageCount    Int      @default(2)
  ownerId      String?  @db.VarChar(191)
  owner        User?    @relation(fields: [ownerId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
